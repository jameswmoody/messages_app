<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 create center">
      <h1>Log in</h1>
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control, field' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control field' %>
        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
